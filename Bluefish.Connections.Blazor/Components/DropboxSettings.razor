@inherits SettingsBase<DropboxConnection>

<div class="@CssClass">
    <label class="form-label">App Key</label>
    <InputText ValueExpression="@(() => _connection.AppKey)"
               Value="@_connection.AppKey"
               ValueChanged="OnAppKeyChanged"
               class="form-control form-control-sm"
               disabled="@(!CanEdit)" />
    <div class="form-text">Key that identifies the Dropbox application.</div>
    <ValidationMessage For="() => _connection.AppKey" />
</div>

<div class="@CssClass">
    <label class="form-label">App Secret</label>
    <InputText ValueExpression="@(() => _connection.AppSecret)"
               Value="@_connection.AppSecret"
               ValueChanged="OnAppSecretChanged"
               class="form-control form-control-sm"
               type="password"
               disabled="@(!CanEdit)" />
    <div class="form-text">Secret for the identified Dropbox application.</div>
    <ValidationMessage For="() => _connection.AppSecret" />
</div>

<div class="@CssClass">
    <label class="form-label">Access Token</label>
    <InputText ValueExpression="@(() => _connection.AccessToken)"
               Value="@_connection.AccessToken"
               ValueChanged="OnAccessTokenChanged"
               class="form-control form-control-sm"
               disabled="@(!CanEdit)" />
    <div class="form-text">Access token generated for user access to Dropbox application.</div>
    <ValidationMessage For="() => _connection.AccessToken" />
</div>

<div class="@CssClass">
    <label class="form-label">Root Folder</label>
    <InputText ValueExpression="@(() => _connection.RootFolder)"
               Value="@_connection.RootFolder"
               ValueChanged="OnRootFolderChanged"
               class="form-control form-control-sm"
               disabled="@(!CanEdit)" />
    <div class="form-text">Root folder where files will be placed under. Leave blank for root folder. Use forward slashes to separate sub folders (e.g. /voicenet/recordings)</div>
    <ValidationMessage For="() => _connection.RootFolder" />
</div>
